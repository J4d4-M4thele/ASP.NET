@model List<RestaurantList.Models.Restaurant>
@{
    ViewData["Title"] = "RestaurantIndex";
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <!--display code-->
            <div class="col-6">
                <div class="d-flex justify-content-center">
                    <h4>@item.Name</h4>
                </div>
                <div class="d-flex justify-content-center">
                    <img src=" @item.ImageUrl" style="width: 70%" />
                </div>
                <div class="d-flex justify-content-center">
                    @item.Address
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">
                        Details
                    </a>
                </div>
            </div>
        }
    </div>
</div>